<?xml version="1.0" encoding="utf-8"?>
<network-security-config>
    <!--
        Allow cleartext (HTTP) traffic for Music Assistant servers.
        Many users run MA on local networks without HTTPS.
        HTTPS is still supported and recommended for remote access.
    -->
    <base-config cleartextTrafficPermitted="true">
        <trust-anchors>
            <certificates src="system" />
        </trust-anchors>
    </base-config>
</network-security-config>
