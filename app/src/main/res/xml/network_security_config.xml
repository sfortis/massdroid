<?xml version="1.0" encoding="utf-8"?>
<network-security-config>
    <!--
    Allow cleartext traffic for:
    - Local network servers (http://)
    - SendSpin WebSocket protocol (ws://)
    Users are encouraged to use HTTPS when possible.
    -->
    <base-config cleartextTrafficPermitted="true">
        <trust-anchors>
            <certificates src="system" />
        </trust-anchors>
    </base-config>
</network-security-config>
